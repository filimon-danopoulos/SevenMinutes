<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/background_color"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:textSize="24.0dip"
              android:id="@+id/sound_label"
              android:textColor="@color/background_color"
              android:gravity="center"
              android:background="@color/highlight_color"
              android:paddingTop="5.0dip"
              android:paddingBottom="5.0dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Sound"
              android:layout_alignParentTop="true"/>
    <CheckBox android:textColor="@color/highlight_color"
              android:id="@+id/sound_enabled_checkbox"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10.0dip"
              android:text="Enable Sound"
              android:layout_below="@id/sound_label"/>
    <CheckBox android:textColor="@color/highlight_color"
              android:id="@+id/read_next_exercise_checkbox"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10.0dip"
              android:text="Read next exercise"
              android:layout_below="@id/sound_enabled_checkbox"/>
    <CheckBox android:textColor="@color/highlight_color"
              android:id="@+id/read_twenty_second_mark_checkbox"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10.0dip"
              android:text="Read twenty second mark"
              android:layout_below="@id/read_next_exercise_checkbox"/>
    <CheckBox android:textColor="@color/highlight_color"
              android:id="@+id/read_ten_second_mark_checkbox"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10.0dip"
              android:text="Read ten second mark"
              android:layout_below="@id/read_twenty_second_mark_checkbox"/>
    <LinearLayout android:orientation="horizontal"
                  android:padding="10.0dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1.0"
                  android:layout_alignParentBottom="true">
        <Button android:textSize="32.0dip"
                android:textColor="@color/highlight_color"
                android:id="@+id/save_settings_button"
                android:background="@color/foreground_color"
                android:layout_width="0.0dip"
                android:layout_height="70.0dip"
                android:layout_marginRight="5.0dip"
                android:text="Save"
                android:layout_weight="0.5"/>
        <Button android:textSize="32.0dip"
                android:textColor="@color/highlight_color"
                android:id="@+id/cancel_settings_button"
                android:background="@color/foreground_color"
                android:layout_width="0.0dip"
                android:layout_height="70.0dip"
                android:layout_marginLeft="5.0dip"
                android:text="Cancel"
                android:layout_weight="0.5"/>
    </LinearLayout>
</RelativeLayout>